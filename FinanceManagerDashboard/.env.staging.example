# Staging environment configuration (values resolved via AWS Secrets Manager / Doppler)
APP_ENV=staging
NODE_ENV=production

API_GATEWAY_URL=https://api.staging.finance-manager.example.com
AUTH_SESSION_SECRET=replace-with-staging-auth-secret-at-least-32chars
DATABASE_URL=postgresql://staging_user:staging_password@staging-db.cluster-xyz.us-west-2.rds.amazonaws.com:5432/finance_manager_staging?schema=public
REDIS_URL=rediss://staging-redis.finance-manager.example.com:6379/0
POSTHOG_API_KEY=phx_staging_secret_token
PLAID_CLIENT_ID={{ secretsManager:finance_manager/staging/plaid_client_id }}
PLAID_SECRET={{ secretsManager:finance_manager/staging/plaid_secret }}
AZURE_OPENAI_API_KEY={{ secretsManager:finance_manager/staging/azure_openai_api_key }}
AZURE_OPENAI_ENDPOINT=https://staging-finance-manager.openai.azure.com
AWS_REGION=us-west-2
AWS_SES_REGION=us-west-2
AWS_S3_REPORTS_BUCKET=finance-manager-staging-reports
TWILIO_ACCOUNT_SID={{ secretsManager:finance_manager/staging/twilio_account_sid }}
TWILIO_AUTH_TOKEN={{ secretsManager:finance_manager/staging/twilio_auth_token }}

NEXT_PUBLIC_APP_ENV=staging
NEXT_PUBLIC_API_BASE_URL=https://app.staging.finance-manager.example.com/api
NEXT_PUBLIC_POSTHOG_KEY=phc_staging_public_token
NEXT_PUBLIC_POSTHOG_HOST=https://app.posthog.com
NEXT_PUBLIC_SENTRY_DSN=https://examplePublicKey@o0.ingest.sentry.io/0
